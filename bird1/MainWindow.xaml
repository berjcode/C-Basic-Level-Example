        <Image Name="FlappyBird" Height="30" Width="30" Source="images/flappy.png" Stretch="Fill" Canvas.Top="207" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="-1" RenderTransformOrigin="0.489,1.621"/>
