        <Image Height="360" Width="66" Source="images/pipeBottom.png" Tag="obs1" Canvas.Left="20" Canvas.Top="242" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>
        <Image Height="360" Width="66" Source="images/pipeTop.png" Tag="obs1" Canvas.Left="19" Canvas.Top="-238" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.382,0.458"></Image>

        <Image Height="360" Width="66" Source="images/pipeBottom.png" Tag="obs2" Canvas.Left="154" Canvas.Top="282" HorizontalAlignment="Left" VerticalAlignment="Top"></Image>
